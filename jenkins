pipeline{
        agent any 
        stages{
            stage("git checkout") {
                steps{
                    sh 'pwd' 
                }
            }
                stage("Check Git Version"){
                    steps{
                       git '--version'
                    }
                }
                stage("Create a Directory"){
                    steps{
                       mkdir  '/Jenkins-data'
                    }
                }
        }
}
